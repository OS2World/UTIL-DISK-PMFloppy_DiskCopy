#define INCL_WIN
#include <os2.h>
#include "pmfloppy.h"

POINTER  IDR_PMFLOPPY pmfloppy.ico


MENU IDR_PMFLOPPY PRELOAD
BEGIN
  SUBMENU "~Disk", IDM_DISK_MENU
  BEGIN
    MENUITEM "~Read\t^R",   IDM_READ,   MIS_TEXT
    MENUITEM "~Write\t^W",  IDM_WRITE,  MIS_TEXT
	MENUITEM "D~uplicate\t^U", IDM_DUPLICATE,	MIS_TEXT
