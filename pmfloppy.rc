    MENUITEM SEPARATOR
    MENUITEM "~About\t^A",  IDM_ABOUT,  MIS_TEXT
  END

  SUBMENU "~Image", IDM_DISK_MENU
  BEGIN
    MENUITEM "~Load\t^L",   IDM_LOAD,   MIS_TEXT
    MENUITEM "~Save\t^S",   IDM_SAVE,   MIS_TEXT
